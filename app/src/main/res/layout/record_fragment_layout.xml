<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/fragment_record"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_mic_white"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/recordButton">
    </android.support.design.widget.FloatingActionButton>

    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:textSize="40sp"
            android:fontFamily="sans-serif"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="84dp" android:layout_alignParentTop="true">
    </Chronometer>

    <!--<ProgressBar-->
        <!--android:layout_width="230dp"-->
        <!--android:layout_height="230dp"-->
        <!--android:indeterminate="false"-->
        <!--android:id="@+id/recordProgressBar"-->
        <!--android:max="100"-->
        <!--android:progress="0"-->
        <!--android:layout_marginTop="27dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
    <!--&gt;-->
    <!--</ProgressBar>-->

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/pauseButton"
        android:drawableLeft="@drawable/ic_pause_white"
        android:text="PAUSE"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/recordButton"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorPrimary"
    >
    </Button>

    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:drawableLeft="@drawable/ic_stop_white"
            android:text="STOP"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/recordButton"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/colorPrimary"
    >
    </Button>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recording_status"
            android:text="Tap Mic to Start Recording"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_above="@+id/recordButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
    >
    </TextView>
</RelativeLayout>